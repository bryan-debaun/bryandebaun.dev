    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@testing-library/react": "^16",
    "@testing-library/dom": "^10",
    "axe-core": "^4",
    "jsdom": "^27",
    "contentlayer2": "0.4.5",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "tailwindcss": "^4",
    "typescript": "5.9.3",
