{
  "name": "bryandebaun.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "content:dev": "contentlayer2 dev",
    "run-content": "tsx scripts/run-content.ts",
    "build": "npm run run-content && next build",
    "test:content": "tsx scripts/check-content.ts",
    "content:checks": "npm run verify:icons && npm run lint:content && npm run cspell:check && npm run link-check",
    "lint:content": "remark \"README.md\" \"docs/**/*.md\" -q",
    "cspell:check": "cspell \"README.md\" \"docs/**/*..md\" \"src/content/**/*.{md,mdx}\"",
    "link-check": "markdown-link-check -c .markdown-link-check.json \"README.md\"",
    "verify:icons": "tsx scripts/verify-manifest-icons.ts",
    "verify:local": "npm run run-content && npm run test:content && npm run content:checks && npm run build && npm run lint",
    "icons:generate": "tsx scripts/generate-icons.ts --src public/icons/omega-wolf.svg --out public/icons --sizes 16,32,48,96,180,192,512",
    "icons:generate:omega": "tsx scripts/generate-icons.ts --src public/icons/omega.svg --out public/icons --sizes 16,32,48,96,180,192,512 --name omega",
    "test": "vitest --run",
    "start": "next start",
    "ci:lighthouse": "lhci autorun",
    "lint:mdx": "eslint --ext .mdx \"src/content\"",
    "lint": "eslint"
  },
  "vitest": {
    "globals": true,
    "test": {
      "environment": "node",
      "threads": false
    }
  },
  "dependencies": {
    "next": "16.1.4",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@contentlayer/source-files": "^0.3.4",
    "@mdx-js/mdx": "^3.1.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "contentlayer2": "0.4.5",
    "cspell": "^9.6.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "eslint-mdx": "^3.6.2",
    "eslint-plugin-mdx": "^3.6.2",
    "eslint-plugin-node": "^11.1.0",
    "markdown-link-check": "^3.14.2",
    "postcss": "^8.5.6",
    "remark-cli": "^12.0.1",
    "remark-lint": "^10.0.1",
    "remark-mdx": "^3.1.1",
    "remark-mdx-frontmatter": "^5.2.0",
    "remark-preset-lint-recommended": "^7.0.1",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "5.9.3",
    "vitest": "^1.6.1",
    "tsx": "^4.18.0"
  }
}